@model IEnumerable<GuitarProjectWebsite.Models.Guitar>
@using GuitarProjectWebsite.Areas.Admin.Models;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <partial name="_CreateButtonPartial" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td asp-if="@item.Image != null">
                <img height="100" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <partial name="_TableButtonsPartial" , model="@{new SmallButtonModel { CategoryId = item.ID }}" />
        </tr>
        }
    </tbody>
</table>
