@model IEnumerable<GuitarProjectWebsite.Models.Category>
@using GuitarProjectWebsite.Areas.Admin.Models;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <partial name="_CreateButtonPartial"/>
</p>
<table class="table table-striped table-condensed">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                    <partial name="_TableButtonsPartial" , model="@{new SmallButtonModel { CategoryId = item.ID }}" />
            </tr>
        }
    </tbody>
</table>
