@model IEnumerable<GuitarProjectWebsite.Models.Producer>
@using GuitarProjectWebsite
@using GuitarProjectWebsite.Areas.Admin.Models;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <partial name="_CreateButtonPartial" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>
                <partial name="_TableButtonsPartial" , model="@{new SmallButtonModel { ProducerId = item.ID }}" />
            </tr>
        }
    </tbody>
</table>
